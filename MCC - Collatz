numbers_array = numbers.split()
numbers_array = [int(item) for item in numbers_array]

array = numbers_array
x = 0

while x != 990:
    i = 0
    for num in array:
        if num % 2 == 0:
            new_num = num / 2
            array[i] = new_num
            i = i+1
        else:
            new_num = 3*num + 1
            array[i] = new_num
            i = i+1
    x = x+1

add = sum(array)
print(add)
