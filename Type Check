# Type Check with isinstance()

def only_ints(num1, num2):
    if isinstance(num1, int) and isinstance(num2, int):
        return True
    else:
        return False

print(only_ints(4,3))
print(only_ints("a",3))

# Type Check comparing type of variable with int

def only_ints(num1, num2):
    if type(num1) == int and type(num2) == int:
        return True
    else:
        return False

print(only_ints(4,3))
print(only_ints("a",3))
